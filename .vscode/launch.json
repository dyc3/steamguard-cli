	"version": "0.2.0",
	"configurations": [
		{
			"type": "lldb",
			"request": "launch",
			"name": "Debug unit tests in library 'steamguard'",
			"cargo": {
				"args": [
					"test",
					"--no-run",
					"--lib",
					"--package=steamguard"
				],
				"filter": {
					"name": "steamguard",
					"kind": "lib"
				}
			},
			"args": [],
			"cwd": "${workspaceFolder}"
		},
		{
			"type": "lldb",
			"request": "launch",
			"name": "Debug executable 'steamguard-cli'",
			"cargo": {
				"args": [
					"build",
					"--bin=steamguard-cli",
					"--package=steamguard-cli"
				],
				"filter": {
					"name": "steamguard-cli",
					"kind": "bin"
				}
			},
			"args": [],
			"cwd": "${workspaceFolder}"
		},
		{
			"type": "lldb",
			"request": "launch",
			"name": "Debug unit tests in executable 'steamguard-cli'",
			"cargo": {
				"args": [
					"test",
					"--no-run",
					"--bin=steamguard-cli",
					"--package=steamguard-cli"
				],
				"filter": {
					"name": "steamguard-cli",
					"kind": "bin"
				}
			},
			"args": [],
			"cwd": "${workspaceFolder}"
		}
	]
}